/************* 관리자 페이지 */

/* 테이블 */
.brd_write {width:100%; border:1px solid #bcc3d1; border-top:2px solid #bcc3d1;}
.brd_write tr {}
.brd_write th {padding:10px 0 10px 18px; border-bottom:1px solid #bcc3d1; font-weight:bold; background:#f4f4f6;vertical-align:top;}
.brd_write td {padding:0 5px; border-bottom:1px solid #bcc3d1;}

.brd_write_pop {width:100%; border:1px solid #bcc3d1; border-top:2px solid #bcc3d1;}
.brd_write_pop tr {}
.brd_write_pop th {padding:10px 5px 10px 5px; border-bottom:1px solid #bcc3d1; font-weight:bold; background:#f4f4f6;text-align:center;}
.brd_write_pop td {padding:0 5px; border-bottom:1px solid #bcc3d1;}

.brd_list {width:100%; border:1px solid #bcc3d1; border-top:2px solid #bcc3d1; table-layout:fixed;}
.brd_list tr {}
.brd_list th {padding:10px 0 10px 18px; border-right:1px solid #bcc3d1; border-bottom:1px solid #bcc3d1; font-weight:bold; background:#f4f4f6;vertical-align:top;}
.brd_list td {padding:10px 18px 10px 18px; border-right:1px solid #bcc3d1; border-bottom:1px solid #bcc3d1;}

.prd_list {width:100%; border:1px solid #bcc3d1; border-top:2px solid #bcc3d1; table-layout:fixed;}
.prd_list tr {}
.prd_list th {padding:5px 5px 5px 5px; border-right:1px solid #bcc3d1; border-bottom:1px solid #bcc3d1; font-weight:bold; background:#f4f4f6;text-align:center;}
.prd_list td {padding:5px 5px 5px 5px; border-right:1px solid #bcc3d1; border-bottom:1px solid #bcc3d1;text-align:center;}

.prd_write {width:100%; border:1px solid #bcc3d1; border-top:2px solid #bcc3d1; table-layout:fixed;}
.prd_write tr {}
.prd_write th {padding:5px 5px 5px 5px; border-right:1px solid #bcc3d1; border-bottom:1px solid #bcc3d1; font-weight:bold; background:#f4f4f6;text-align:center;}
.prd_write td {padding:5px 5px 5px 5px; border-right:1px solid #bcc3d1; border-bottom:1px solid #bcc3d1;text-align:center;}



/* 테이블 하단 버튼 */
.brd_btm {position:relative; clear:both; margin:20px 0 30px; text-align:center;}
.brd_top {position:relative; clear:both; margin:0 0 5px; text-align:right;}
.brd_left {position:relative; clear:both; margin:0 0 5px; text-align:left;}
.brd_right {position:relative; clear:both; margin:0 0 5px; text-align:right;}
table .brd_stress {padding-left:5px; font-weight:bold; color:#de2519;}

.paging {}
.paging a {padding:3px; font-family:verdana; font-size:11px;}
.paging .ov {color:#e3281b;}
.paging .btn_fir {padding:0;}
.paging .btn_prv {padding:0 10px 0 0;}
.paging .btn_nxt {padding:0 0 0 10px;}
.paging .btn_last {padding:0;}


/*선택팝업*/
.pop_select_main {padding:5px 0 0 30px;margin-top:5px;clear:both;}
.pop_select_main li {padding:5px 0 5px 5px;}

.pop_select {padding:5px 0 5px 5px;}
.pop_select li {padding:5px 0 0px 10px;}




.menu_manage {height:100%;}
.tree_box {overflow:hidden; float:left; width:246px; height:391px; border:2px solid #f1a39e; background:#fffafa; }

.brd_box {float:right; width:550px;}



